{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "dotnet build PayHub.sln",
      "group": "build",
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "run-api",
      "type": "shell",
      "command": "dotnet run --project PayHub.Api/PayHub.Api.csproj",
      "group": "test",
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "ef-migrations-add",
      "type": "shell",
      "command": "dotnet ef migrations add <MigrationName> --project PayHub.Infrastructure/PayHub.Infrastructure.csproj --startup-project PayHub.Api/PayHub.Api.csproj",
      "problemMatcher": []
    },
    {
      "label": "ef-database-update",
      "type": "shell",
      "command": "dotnet ef database update --project PayHub.Infrastructure/PayHub.Infrastructure.csproj --startup-project PayHub.Api/PayHub.Api.csproj",
      "problemMatcher": []
    }
  ]
}
